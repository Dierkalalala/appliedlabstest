<div class="page-width">
    <div class="collection__page-content">
        <div class="collection__page-items">
            {% assign products = collections[collection.metafields.allproducts.products].products %}
            {% for product in products %}
                <li class="list-view-item">
                    {% include 'product-card-grid', product: product %}
                </li>
            {% endfor %}
        </div>
    </div>
</div>
