.h1, .h2, h1, h2{
  font-family: var(--font-stack-body);
}
.announcement-bar__message{
  font-family: var(--font-stack-header);
}
.site-nav a {
  font-size: 12px;
  line-height: 140%;
  letter-spacing: 0.175em;
  text-transform: uppercase;
  &:hover{
    color: #fff;
    .site-nav__label {
      border-bottom-color: #fff;
    }
  }

}
.site-header{
  position: absolute;
}
.mega-title{
  font-weight: bold;
  font-size: 60px;
  line-height: 130%;
  letter-spacing: 0.24em;
  text-transform: uppercase;
  color: #FFFFFF;
}
.mega-subtitle p{
  font-size: 14px;
  line-height: 167.5%;
  font-weight: 300;
}
.banner-text-inner-wrapper{
  max-width: 557px;
}
.hero__btn{
  transition: 0.3s linear all;
  margin-top: 40px;
  border: 1px solid #FFFFFF;
  background: transparent;
  font-size: 12px;
  line-height: 16px;
  letter-spacing: 0.175em;
  text-transform: uppercase;
  padding: 21px 24px;
  .hero__btn-arrow{
    transition: 0.3s linear all;
    margin-left: 108px;
    position: relative;
    bottom: 1px;
  }
  &:hover{
    background: transparent !important;
    .hero__btn-arrow {
      margin-left: 130px;
    }
  }
}
.swiper-horizontal>.swiper-scrollbar{
  height: 2px;
}
.swiper-scrollbar-drag{
  background: #000000;
}
.product-card-title{
  margin-top: 8px;
  font-weight: 300;
  font-size: 12px;
  line-height: 168%;
  text-align: center;
  letter-spacing: 0.16em;
  text-transform: uppercase;
  color: #000000;
}
.product-card--image{
  height: 334px;
  img{
    height: 100%;
    object-fit: cover;
  }
}
.product-card{
  .product-card--hover-arrow {
    img {
      transition: 0.3s linear all;
      max-width: 0;
    }
  }
  &:hover {
    .product-card--hover-arrow {
      img {
        max-width: 17px;
      }
    }
  }
}

.d-flex{
  display: flex;
}
.featured__product-banner {
  width: 60%;
  margin-right: 65px;
}
.featured__product-textbox{
  width: 30%;
}
.featured__product-textbox{
  margin-top: 80px;
}
.featured__product-banner {
  img {
    width: 100%;
    height: 1024px;
    object-fit: cover;
  }
}
.featured__product-textbox-img-wrap {
  img {
    width: 100%;
    height: 628px;
    object-fit: cover;
  }
}
.featured__product-textbox-img-wrap{
  margin-bottom: 40px;
}
.featured__product-textbox-subtitle{
  font-family: var(--font-stack-header);
  font-weight: 300;
  font-size: 12px;
  line-height: 168%;
  letter-spacing: 0.16em;
  text-transform: uppercase;
  margin-bottom: 8px;
}
.featured__product-textbox--title{
  font-weight: 600;
  font-size: 24px;
  line-height: 130%;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  color: #000000;
  margin-bottom: 16px;
}
.featured__product-textbox-text{
  font-size: 14px;
  line-height: 167.5%;
  color: #8F8F8F;
  margin-bottom: 40px;
}
.default-button{
  font-size: 12px;
  line-height: 16px;
  letter-spacing: 0.175em;
  text-transform: uppercase;
  color: #000000;
  background: transparent;
  padding: 0;
  font-family: var(--font-stack-body);
  border-bottom: 1px solid #000000;
  padding-bottom: 8px;
  transition: 0.3s linear all;
  &:hover{
    color: #000000;
    background: transparent !important;
    padding-left: 10px;
  }
}
.site-footer h4, .site-footer .h4{
  font-size: 12px;
  line-height: 14px;
  text-align: left;
  letter-spacing: 0.165em;
  text-transform: uppercase;
  color: #000000;
  font-family: var(--font-stack-body);
  margin-bottom: 32px;
}
.site-footer__linklist-item a {
  font-size: 14px;
  line-height: 167.5%;
  color: #7E7E7E;
}
.site-footer__linklist-item{
  padding-bottom: 12px;
}
.site-footer__item-inner--newsletter .newsletter__input{
  background: transparent;
  border: none;
  border-bottom: 1px solid #C4C4C4;
  padding-left: 0;
  outline: none;
}
.site-footer__newsletter{
  max-width: 80%;
}
.site-footer__content{
  margin-bottom: 35px;
}
.site-footer{
  padding-bottom: 10px;
}
.copyright-text-wrapper{
  font-weight: 300;
  font-size: 12px;
  line-height: 167.5%;
  color: #C4C4C4;
  text-align: center;
}
.newsletter__submit{
  background: transparent;
  transform: translateX(calc(-100% - -15px));
  transition: 0.3s linear all;
  &:hover{
    background: transparent !important;
    transform: translateX(calc(-100% - -25px));
  }
}
.social__media-icons{
  margin-top: 30px;


  .social__media-icon{
    margin-right: 20px;
    transition: 0.3s linear all;
    &:hover{
      transform: scale(1.3);
    }
    &:last-child{
      margin-right: 0;
    }
  }
}
.site-footer__linklist-item a{
  transition: 0.3s linear all;
  &:hover{
    padding-left: 15px;
  }
}

