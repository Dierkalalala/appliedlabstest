@media (min-width: 1400px) {
  .container{
    max-width: 1390px;
    padding-left: 15px;
    padding-right: 15px;
    margin: 0 auto;
  }
}
.h1, .h2, h1, h2{
  font-family: var(--font-stack-body);
}
.announcement-bar__message{
  font-family: var(--font-stack-header);
}
.site-nav a {
  font-size: 12px;
  line-height: 140%;
  letter-spacing: 0.175em;
  text-transform: uppercase;
  &:hover{
    color: #fff;
    .site-nav__label {
      border-bottom-color: #fff;
    }
  }

}
.template-index .site-header{
  position: absolute;
}
.mega-title{
  font-weight: bold;
  font-size: 60px;
  line-height: 130%;
  letter-spacing: 0.24em;
  text-transform: uppercase;
  color: #FFFFFF;
}
.mega-subtitle p{
  font-size: 14px;
  line-height: 167.5%;
  font-weight: 300;
}
.banner-text-inner-wrapper{
  max-width: 557px;
}
.hero__btn{
  transition: 0.3s linear all;
  margin-top: 40px;
  border: 1px solid #FFFFFF;
  background: transparent;
  font-size: 12px;
  line-height: 16px;
  letter-spacing: 0.175em;
  text-transform: uppercase;
  padding: 21px 24px;
  .hero__btn-arrow{
    transition: 0.3s linear all;
    margin-left: 108px;
    position: relative;
    bottom: 1px;
  }
  &:hover{
    background: transparent !important;
    .hero__btn-arrow {
      margin-left: 130px;
    }
  }
}
.swiper-horizontal>.swiper-scrollbar{
  height: 2px;
}
.swiper-scrollbar-drag{
  background: #000000;
}
.product-card-title{
  margin-top: 8px;
  font-weight: 300;
  font-size: 12px;
  line-height: 168%;
  text-align: center;
  letter-spacing: 0.16em;
  text-transform: uppercase;
  color: #000000;
}
.product-card--image{
  height: 334px;
  img{
    height: 100%;
    object-fit: cover;
  }
}
.product-card{
  .product-card--hover-arrow {
    img {
      transition: 0.3s linear all;
      max-width: 0;
    }
  }
  &:hover {
    .product-card--hover-arrow {
      img {
        max-width: 17px;
      }
    }
  }
}

.d-flex{
  display: flex;
}
.featured__product-banner {
  width: 60%;
  margin-right: 65px;
}
.featured__product-textbox{
  width: 30%;
}
.featured__product-textbox{
  margin-top: 80px;
}
.featured__product-banner {
  img {
    width: 100%;
    height: 1024px;
    object-fit: cover;
  }
}
.featured__product-textbox-img-wrap {
  img {
    width: 100%;
    height: 628px;
    object-fit: cover;
  }
}
.featured__product-textbox-img-wrap{
  margin-bottom: 40px;
}
.featured__product-textbox-subtitle{
  font-family: var(--font-stack-header);
  font-weight: 300;
  font-size: 12px;
  line-height: 168%;
  letter-spacing: 0.16em;
  text-transform: uppercase;
  margin-bottom: 8px;
}
.featured__product-textbox--title{
  font-weight: 600;
  font-size: 24px;
  line-height: 130%;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  color: #000000;
  margin-bottom: 16px;
}
.featured__product-textbox-text{
  font-size: 14px;
  line-height: 167.5%;
  color: #8F8F8F;
  margin-bottom: 40px;
}
.default-button{
  font-size: 12px;
  line-height: 16px;
  letter-spacing: 0.175em;
  text-transform: uppercase;
  color: #000000;
  background: transparent;
  padding: 0;
  font-family: var(--font-stack-body);
  border-bottom: 1px solid #000000;
  padding-bottom: 8px;
  transition: 0.3s linear all;
  &:hover{
    color: #000000 !important;
    background: transparent !important;
    padding-left: 10px;
  }
}
.site-footer h4, .site-footer .h4{
  font-size: 12px;
  line-height: 14px;
  text-align: left;
  letter-spacing: 0.165em;
  text-transform: uppercase;
  color: #000000;
  font-family: var(--font-stack-body);
  margin-bottom: 32px;
}
.site-footer__linklist-item a {
  font-size: 14px;
  line-height: 167.5%;
  color: #7E7E7E;
}
.site-footer__linklist-item{
  padding-bottom: 12px;
}
.site-footer__item-inner--newsletter .newsletter__input{
  background: transparent;
  border: none;
  border-bottom: 1px solid #C4C4C4;
  padding-left: 0;
  outline: none;
}
.site-footer__newsletter{
  max-width: 80%;
}
.site-footer__content{
  margin-bottom: 35px;
}
.site-footer{
  padding-bottom: 10px;
}
.copyright-text-wrapper{
  font-weight: 300;
  font-size: 12px;
  line-height: 167.5%;
  color: #C4C4C4;
  text-align: center;
}
.newsletter__submit{
  background: transparent;
  transform: translateX(calc(-100% - -15px));
  transition: 0.3s linear all;
  &:hover{
    background: transparent !important;
    transform: translateX(calc(-100% - -25px));
  }
}
.social__media-icons{
  margin-top: 30px;


  .social__media-icon{
    margin-right: 20px;
    transition: 0.3s linear all;
    &:hover{
      transform: scale(1.3);
    }
    &:last-child{
      margin-right: 0;
    }
  }
}
.site-footer__linklist-item{
  transition: 0.3s linear all;
  &:hover{
    padding-left: 15px;
  }
}
.d-block{
  display: block;
}

.featured__page-hero-textbox{
  width: 38%;
  transform: translateY(-60px);
}
.featured__page-hero-title{
  font-weight: bold;
  font-size: 40px;
  line-height: 62px;
  letter-spacing: 0.175em;
  text-transform: uppercase;
  color: #000000;
}
.featured__page-collection-hero-btn{
  color: #000;
  border-color: #000;
}
.featured__page-imagebox{
  width: 60%;
  position: relative;
  margin-left: auto;
  padding-bottom: 80px;
}
.featured__page-main-img-wrap{
  height: 790px;
  width: 75%;
  img{
    height: 100%;
    object-fit: cover;
    width: 100%;
  }
}
.featured__page-preview{
  height: 359px;
  width: 35%;
  position: absolute;
  bottom: 0;
  right: 0;
  img{
    height: 100%;
    width: 100%;
    object-fit: cover;
  }
}
.featured__page-hero-eyebrow{
  font-weight: 300;
  font-size: 12px;
  line-height: 168%;
  letter-spacing: 0.16em;
  text-transform: uppercase;
  color: #000000;
  margin-bottom: 16px;
  font-family: var(--font-stack-header);
}
.featured__page-hero{
  align-items: center;
  margin-bottom: 40px;
}
.collection__page-product-wrapper{
  margin-bottom: 30px;
}
.product-template-wrapper{
  max-height: 900px;
}
.product__page-main-img{
  height: 900px;
  img {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }
}
.product__textbox{
  padding-left: 80px;
  padding-right: 80px;
  max-width: 650px;
}
.product__textbox-main-title{
  font-weight: 600;
  font-size: 24px;
  line-height: 130%;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  color: #000000;
}
.product__textbox-price{
  font-style: normal;
  font-weight: normal;
  font-size: 14px;
  line-height: 167.5%;
  color: #000000;
  margin-bottom: 40px;
}
.product__textbox-option {
  align-items: center;
  font-style: normal;
  font-weight: 300;
  font-size: 14px;
  line-height: 167.5%;
  color: #000000;
  margin-bottom: 24px;
  img{
    height: 16px;
    margin-right: 8px;
  }
}
.product__textbox-description{
  font-size: 14px;
  line-height: 167.5%;
  color: #000000;
  margin-bottom: 16px;
  p{
    color: #000000;
  }
}
.product__option-wrapper{
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  overflow-y: scroll;
  max-height: 250px;
  margin-bottom: 16px;
  label{
    width: 30%;
    height: 55px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 8px;
    border: 1px solid #F1F1F1;
    font-size: 14px;
    line-height: 167.5%;
    color: #000000;
    cursor: pointer;
    margin-right: 15px;
    transition: 0.3s linear all;
    &.selected {
      border-color: #000;
    }
    &:hover{
      border-color: #000;
    }
  }
}
.product__textbox-terms{
  font-size: 14px;
  line-height: 167.5%;
  color: #979797;
  margin-bottom: 24px;
}
.product__textbox-order-btn{
  margin-bottom: 40px;
  padding-bottom: 24px;
  border-bottom: 1px solid #F1F1F1;
}

.fill-button{
  width: 100%;
  height: 43px;
  background: #000;
  font-size: 12px;
  line-height: 16px;
  text-align: center;
  letter-spacing: 0.175em;
  text-transform: uppercase;
  color: #FFFFFF;
  padding-bottom: 0;
  &:hover{
    padding-left: 0;
  }
}

.product__textbox-additional-title{
  font-weight: 600;
  font-size: 16px;
  line-height: 167.5%;
  color: #000000;
  margin-bottom: 25px;
}
.product__textbox-additional-item-img-wrap{
  max-height: 125px;
  img{
    max-height: 100%;
    max-width: 98px;
  }
}
.product__textbox-additional-item-title{
  font-weight: normal;
  font-size: 14px;
  line-height: 167.5%;
  color: #000000;
}
.product__textbox-additional-add-to-card-btn{
  font-weight: 300;
  font-size: 14px;
  line-height: 167.5%;
  text-decoration-line: underline;
  color: #000000;
  cursor: pointer;
}
.product__textbox-additional-item-textbox{
  padding-top: 22px;
}
.product__option-wrapper::-webkit-scrollbar {
  width: 4px;
  background: #F1F1F1;
  border-radius: 92px;
}
.product__option-wrapper::-webkit-scrollbar-track {
  background: #F1F1F1;
  border-radius: 92px;
}

.product__option-wrapper::-webkit-scrollbar-thumb {
  background: #353535;
  border-radius: 92px;
}
.product__page-description{
  background: #000000;
  color: #fff;
  position: relative;
  height: 620px;
  p{
    color: #fff;
  }
}
.product__page-description-wrapper{
  height: 620px;
}
.product__page-description {
  position: relative;
  &:nth-child(even) {
    .row {
      flex-direction: row-reverse;
    }
  }
  &:nth-child(1){
    .image-wrapper{
      height: 100%;
      img{
        right: 0;
        top: 0;
        height: 100%;
        max-width: 50%;
        position: absolute;
        width: 100%;
        object-fit: cover;
      }
    }
  }
}
.price-currency{
  text-transform: uppercase;
}




























































