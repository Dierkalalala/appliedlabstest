.site-nav a {
  font-size: 12px;
  line-height: 140%;
  letter-spacing: 0.175em;
  text-transform: uppercase;
}
.site-header{
  position: absolute;
}
.mega-title{
  font-weight: bold;
  font-size: 60px;
  line-height: 130%;
  letter-spacing: 0.24em;
  text-transform: uppercase;
  color: #FFFFFF;
}
.mega-subtitle p{
  font-size: 14px;
  line-height: 167.5%;
  font-weight: 300;
}
.banner-text-inner-wrapper{
  max-width: 557px;
}
.hero__btn{
  margin-top: 40px;
  border: 1px solid #FFFFFF;
  background: transparent;
  font-size: 12px;
  line-height: 16px;
  letter-spacing: 0.175em;
  text-transform: uppercase;
  padding: 21px 24px;
  .hero__btn-arrow{
    margin-left: 108px;
    position: relative;
    bottom: 1px;
  }
}
.swiper-horizontal>.swiper-scrollbar{
  height: 2px;
}
.swiper-scrollbar-drag{
  background: #000000;
}
.product-card-title{
  margin-top: 8px;
  font-weight: 300;
  font-size: 12px;
  line-height: 168%;
  text-align: center;
  letter-spacing: 0.16em;
  text-transform: uppercase;
  color: #000000;
}
.product-card--image{
  height: 334px;
  img{
    height: 100%;
    object-fit: cover;
  }
}
.product-card{
  .product-card--hover-arrow {
    img {
      transition: 0.3s linear all;
      max-width: 0;
    }
  }
  &:hover {
    .product-card--hover-arrow {
      img {
        max-width: 17px;
      }
    }
  }
}
.h1, .h2, h1, h2{
  font-family: var(--font-stack-body);
}
.announcement-bar__message{
  font-family: var(--font-stack-body);
}
.d-flex{
  display: flex;
}
.featured__product-banner{
  width: 60%;
}
.featured__product-textbox{
  width: 25%;
}
.featured__product-textbox{
  margin-top: 80px;
}


